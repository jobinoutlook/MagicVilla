@model MagicVilla_Web.Models.VM.VillaNumberUpdateVM

<form asp-action="UpdateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update VillaNumber</h1>
        <div class="row ms-2 me-1 w-75">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-3">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px"></label>
            </div>

            <div class="col-9 pb-3">
                <input asp-for="VillaNumber.VillaNo" readonly class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>


            <div class="col-3">
                <label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size:20px"></label>
            </div>

            <div class="col-9 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>


            <div class="col-3">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5">
            </textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-4 offset-3">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn btn-primary form-control">Back To List</a>
            </div>

            <div class="col-4">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>

        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}